<?xml version="1.0" encoding="UTF-8"?>
<project name="TF2_WYSIWYG_HUD_EDITOR" default="default" basedir=".">
    <description>Builds, tests, and runs the project TF2 WYSIWYG HUD EDITOR.</description>
    <import file="nbproject/build-impl.xml"/>
    
    <property name="store.jar.name" value="TF2 HUD Editor"/>
    <property name="store.dir" value="/home/andrew/Dropbox/Public/tf/Hud Editor"/>
    <tstamp prefix="build-info">
        <format property="timestamp" pattern="yyyyMMdd/Hmm" locale="en" />
    </tstamp>
    
    <property name="store.jar" value="${store.dir}/${store.jar.name}.jar"/>
    <property name="store.jar.dated" value="${store.dir}/${build-info.timestamp}.jar"/>
    
    <target name="-post-clean">
<!--        <delete file="${store.jar}"/>-->
    </target>
    
    <target name="-post-jar">
        <echo message="Packaging ${application.title} into a single JAR at ${store.jar.dated}"/>
        <mkdir dir="${store.dir}"/>
        <delete file="${store.jar.dated}"/>
        <mkdir dir="dist/lib"/> <!-- Just in case no external libraries are in use and we don't want the packagint ot fail -->
        <jar destfile="${store.dir}/temp_final.jar" filesetmanifest="skip">
            <zipgroupfileset dir="dist" includes="*.jar"/>
            <zipgroupfileset dir="dist/lib" includes="*.jar"/>
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
        <zip destfile="${store.jar.dated}">
            <zipfileset src="${store.dir}/temp_final.jar" excludes="META-INF/*.SF, META-INF/*.DSA, META-INF/*.RSA"/>
        </zip>
        <delete file="${store.dir}/temp_final.jar"/>
        <copy file="${store.jar.dated}" tofile="${store.jar}"/>
        <chmod file="${store.jar.dated}" perm="777"/>
        <chmod file="${store.jar}" perm="777"/>
    </target>
    
</project>