<?xml version="1.0" encoding="UTF-8"?>
<project name="TF2_WYSIWYG_HUD_EDITOR" basedir="." default="jar">
    <description>Builds, tests, and runs the project TF2 WYSIWYG HUD EDITOR.</description>
    <import file="nbproject/build-impl.xml"/>

    <script language="javascript">
        <![CDATA[property = project.setProperty("now", Math.floor((new Date()).getTime() / 1000));]]>
    </script>

    <property name="store.jar.name" value="TF2 HUD Editor"/>
    <property name="store.dir" value="${user.home}/Dropbox/Public/tf/Hud Editor"/>
    <property name="archive.dir" value="temp"/>

    <property name="store.jar" value="${store.dir}/${store.jar.name}.jar"/>

    <target name="-post-jar">
        <echo message="Packaging ${application.title} into a single JAR at ${store.jar}"/>
        <mkdir dir="${archive.dir}"/>
        <mkdir dir="dist/lib"/> <!-- Just in case no external libraries are in use and we don't want the packaging to fail -->
        <mkdir dir="${store.dir}"/>
        <jar destfile="${archive.dir}/temp_final.jar">
        	<manifest>
        	    <attribute name="Main-Class" value="${main.class}"/>
        	    <attribute name="Implementation-Version" value="${now}"/>
        	</manifest>
            <zipgroupfileset dir="dist" includes="*.jar"/>
            <zipgroupfileset dir="dist/lib" includes="*.jar"/>
            <!--<zipgroupfileset dir="." includes="*.dll, *.so, *.dylib"/>-->
            
        </jar>
        <zip destfile="${store.jar}" level="9">
            <zipfileset src="${archive.dir}/temp_final.jar" excludes="META-INF/*.SF, META-INF/*.DSA, META-INF/*.RSA"/>
        </zip>
        <delete file="${store.dir}/temp_final.jar"/>
        <checksum file="${store.jar}" forceOverwrite="yes"/>
        <echo file="${store.jar}.current" message="${now}" append="false"/>
        <chmod file="${store.jar}" perm="777"/>

        <!--<exec executable="java">-->
          <!--<arg value="-jar"/>-->
          <!--<arg value="${store.jar}"/>-->
        <!--</exec>-->

    </target>
	
	<target name="javadoc">
	</target>
	
	<target name="create_run_jar">
		<echo message="Buildin'"/>
        <jar destfile="/home/timepath/Dropbox/Public/tf/Hud Editor/TF2 HUD Editor.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="com.timepath.tf2.hudeditor.Wrapper"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ xfiledialog.jar jayatana-1.2.4.jar JGoogleAnalytics_0.4.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="/home/timepath/workspace/tf2-hud-editor/bin"/>
            <zipgroupfileset dir="/home/timepath/workspace/tf2-hud-editor/lib" includes="xfiledialog.jar"/>
            <zipfileset dir="/home/timepath/workspace/tf2-hud-editor/lib" includes="jayatana-1.2.4.jar"/>
            <zipfileset dir="/home/timepath/workspace/tf2-hud-editor/lib" includes="JGoogleAnalytics_0.4.jar"/>
        </jar>
    </target>

</project>
